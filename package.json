{
  "name": "fun-chat",
  "version": "1.0.0",
  "private": true,
  "description": "Fun Chat SPA application",
  "scripts": {
    "start": "webpack serve --mode development --open",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "build:github": "cross-env NODE_ENV=production GITHUB_PAGES=true webpack --mode production",
    "predeploy": "npm run build:github",
    "deploy": "gh-pages -d dist",
    "lint": "eslint src --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss,css}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,scss,css}\" \"*.{json,md}\"",
    "validate": "npm run lint && npm run format:check",
    "prepare": "husky",
    "precommit": "npm run lint:fix && npm run format"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{scss,css}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.3",
    "eslint": "^9.39.2",
    "eslint-plugin-unicorn": "^62.0.0",
    "gh-pages": "^6.3.0",
    "html-webpack-plugin": "^5.6.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mini-css-extract-plugin": "^2.10.0",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "chat",
    "websocket",
    "spa",
    "typescript"
  ],
  "author": "Afedziukovich",
  "license": "MIT"
}
